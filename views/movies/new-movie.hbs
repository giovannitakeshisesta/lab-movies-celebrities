<h1>new movie.hbs</h1>

<form action="/movies/create" method="POST">

<div>
    <label>title</label>
    <input type="text" name="title">
</div>

<div>
    <label>genre</label>
    <input type="text" name="genre">
</div>

<div>
    <label>plot</label>
    <input type="text" name="plot">
</div>

<div>
    <label>cast</label>
    <select name="cast" multiple>
        {{#each celebrities}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>

<button type="submit">create a movie</button>
</form>